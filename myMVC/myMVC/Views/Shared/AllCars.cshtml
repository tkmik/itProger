@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h4>Model: @Model.Name</h4>
    <p>@Model.ShortDescription</p>
    <p>Price: @Model.Price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="Cart" asp-action="AddToCar" asp-route-id="@Model.Id">Add in the basket</a></p>
</div>
            

